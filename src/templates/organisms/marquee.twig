<!-- Marquee Slider
============================================= -->
<div id="mobile-background" class="hidden-md hidden-lg">
    <a href="#"
       data-scrollto="#section-specials"
       data-offset="0">
        <img src="assets/slides/slide-mobile.jpg" style="width:100%;height:auto;" alt="{{ doctorName }}">
    </a>
</div>

<!-- Marquee Slider
============================================= -->
<section id="marquee-slider" class="hidden-xxs hidden-xs hidden-sm slider-parallax swiper_wrapper clearfix hidden-xs">
    <div class="swiper-container swiper-parent swiper-container-horizontal">
        <div class="swiper-wrapper">
            {#<!--Slide 1-->#}
            {#<!--=======-->#}
            <div class="swiper-slide swiper-slide-active slide1">
                <img src="/assets/slides/slide1.jpg" alt="Dr. Cary and Team">
                <div class="container clearfix slide-content">
                    <div class="row">
                        <div class="col-sm-6 col-sm-push-6 center">
                            {#<h1 class="slide__title">My Family Plus Your Family Equals</h1>#}
                            {#<h2 class="slide__title-smile">GREAT SMILES</h2>#}
                            <img src="assets/slides/slide1-headline.png"
                                 alt="Canby and Sherwood Dentistry"
                                 class="slide__title">
                            <h3 class="slide__copy">Now Welcoming New Patients</h3>
                            <a href="#"
                               class="btn"
                               data-scrollto="#section-specials"
                               data-offset="80">New Patient Offers</a>
                            {% include 'atoms/down-arrow.twig' %}
                        </div>
                    </div>
                </div>
            </div>
            {#<!--Slide 3-->#}
            {#<!--=======-->#}
            <div class="swiper-slide slide2">
                <img src="/assets/slides/slide2.jpg" alt="Happy Mother and Child">
                <div class="container clearfix slide-content">
                    <div class="row">
                        <div class="col-sm-6  col-sm-push-6 center">
                            <img src="assets/slides/slide2-headline.png"
                                 alt="No Insurance? Our Patients don't need it"
                                 class="slide__title">
                            <h3 class="slide__copy">Get your preventive care for<br> a low monthly fee</h3>
                            <a href="#"
                               class="btn"
                               data-offset="80"
                               data-scrollto="#section-specials">Learn More</a>
                            {% include 'atoms/down-arrow.twig' %}
                        </div>
                    </div>
                </div>
            </div>
            {#<!--Slide 2-->#}
            {#<!--=======-->#}
            <div class="swiper-slide slide3">
                <img src="/assets/slides/slide3.jpg" alt="Happy family back from the dentist">
                <div class="container clearfix slide-content">
                    <div class="row">
                        <div class="col-sm-6  col-sm-push-6 center">
                            <img src="assets/slides/slide3-headline.png"
                                 alt="Pa"
                                 class="slide__title">
                            <img src="assets/slides/stars.png"
                                 alt="five stars"
                                 class="stars">
                            <p class="slide__copy">“I really appreciated the friendliness and professionalism that came from everyone in the office, and I felt extremely comfortable!” –Amanda V.</p>
                            <a href="#"
                               class="btn"
                               data-offset="80"
                               data-scrollto="#section-reviews">Read More</a>
                            {% include 'atoms/down-arrow.twig' %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

